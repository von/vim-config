snippet module "Module file template" b
-- ${1:Module} module
local module = {}

-- Set up logger for module
module.log = hs.logger.new("$1", "info")

module.debug = function(enable)
  if enable then
    module.log.setLogLevel('debug')
    module.log.d("Debugging enabled")
  else
    module.log.d("Disabling debugging")
    module.log.setLogLevel('info')
  end
end

-- Module contents here
-- e.g. module.foo = function() hs.alert("Hello world") end

return module
endsnippet
